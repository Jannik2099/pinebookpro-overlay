diff --git a/arch/arm64/Makefile b/arch/arm64/Makefile
index dca1a9775..e0f887143 100644
--- a/arch/arm64/Makefile
+++ b/arch/arm64/Makefile
@@ -14,6 +14,12 @@ LDFLAGS_vmlinux	:=--no-undefined -X
 CPPFLAGS_vmlinux.lds = -DTEXT_OFFSET=$(TEXT_OFFSET)
 GZFLAGS		:=-9
 
+ifdef CONFIG_CC_A72A53
+KBUILD_CFLAGS += -mcpu=cortex-a72.cortex-a53
+else ifdef CONFIG_CC_A53
+KBUILD_CFLAGS += -mcpu=cortex-a53
+endif
+
 ifeq ($(CONFIG_RELOCATABLE), y)
 # Pass --no-apply-dynamic-relocs to restore pre-binutils-2.27 behaviour
 # for relative relocs, since this leads to better Image compression
diff --git a/init/Kconfig b/init/Kconfig
index 24b23d843..47a71fbea 100644
--- a/init/Kconfig
+++ b/init/Kconfig
@@ -1252,6 +1252,23 @@ config CC_OPTIMIZE_FOR_SIZE
 
 endchoice
 
+config CC_CPU_TARGET
+	bool "Optimize for a specific cpu via -mcpu"
+	default n
+
+choice
+	prompt "Compiler CPU target"
+	default CC_CPU_TARGET_A72A53
+	depends on CC_CPU_TARGET
+
+config CC_CPU_TARGET_A72A53
+	bool "-mcpu=cortex-a72.cortex-a53"
+
+config CC_CPU_TARGET_A53
+	bool "-mcpu=cortex-a53"
+
+endchoice
+
 config HAVE_LD_DEAD_CODE_DATA_ELIMINATION
 	bool
 	help
